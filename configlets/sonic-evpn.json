{
  "name": "sonic-evpn",
  "description": "EVPN/VXLAN baseline configuration",
  "version": "1.0",
  "variables": ["vtep_name", "loopback_ip"],
  "config_db": {
    "VXLAN_TUNNEL": {
      "{{vtep_name}}": {
        "src_ip": "{{loopback_ip}}"
      }
    },
    "VXLAN_EVPN_NVO": {
      "nvo1": {
        "source_vtep": "{{vtep_name}}"
      }
    }
  },
  "frr_config": {
    "bgp": {
      "address_families": {
        "l2vpn_evpn": {
          "advertise_all_vni": true,
          "advertise_default_gw": true,
          "advertise_svi_ip": true
        }
      }
    }
  }
}
